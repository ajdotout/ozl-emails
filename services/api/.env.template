# Campaign API Service - Environment Variables Template
# Copy this file to .env and fill in your actual values
#
# Usage:
#   cp env.template .env
#   # Then edit .env with your actual values

# =============================================================================
# Supabase Configuration
# =============================================================================
# Your Supabase project URL
#http://127.0.0.1:54321
SUPABASE_URL=https://your-project.supabase.co

# Supabase service role key (has admin privileges)
# Get this from: Supabase Dashboard -> Settings -> API -> service_role key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# SparkPost Configuration
# =============================================================================
# SparkPost API key for sending emails
# Get this from: SparkPost Dashboard -> Account -> API Keys
SPARKPOST_API_KEY=your_sparkpost_api_key_here

# =============================================================================
# AI Configuration
# =============================================================================
# Groq API key for AI content generation
# Get this from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# =============================================================================
# Security Secrets
# =============================================================================
# Secret key for generating unsubscribe URLs
# Generate a random string (e.g., using: openssl rand -hex 32)
UNSUBSCRIBE_SECRET=your_unsubscribe_secret_here

# =============================================================================
# Frontend Configuration
# =============================================================================
# Frontend URL for CORS and unsubscribe links
# Development: http://localhost:3000
# Production: https://oz-dev-dash-ten.vercel.app
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Scheduling Configuration
# =============================================================================
# Timezone for working hours (9am-5pm)
# Common values: America/Los_Angeles, America/New_York, UTC
TIMEZONE=America/Los_Angeles

# Working hours start (24-hour format)
WORKING_HOUR_START=9

# Working hours end (24-hour format)
WORKING_HOUR_END=17

# Interval between emails from the same domain (in minutes)
INTERVAL_MINUTES=3.5

# Maximum random jitter to add to intervals (in seconds)
JITTER_SECONDS_MAX=30

